#!/bin/env bash
#
# Add subtree aliases for manually doing this:
#
# [alias]
#   sba = "!f() { git subtree add --prefix $2 $1 master --squash; }; f"
#   sbu = "!f() { git subtree pull --prefix $2 $1 master --squash; }; f"
#
# Source this to update your vim git subtrees:
#
# cd $HOME/.cfg
# source .subtrees
# git subtree pull --prefix .vim/bundle/project $vim_project master --squash

# Global {{{
export GH_ROOT="https://github.com"
# }}}
# Must have {{{
subtrees="                  \
  bling/vim-airlinej        \
  tpope/vim-dispatch        \
  scrooloose/nerdtree       \
  kien/ctrlp.vim            \
  kienairblade/vim-gitgutter"
# Functions {{{
function update_subtrees {
  for t in $subtrees; do
    folder_name=$(echo $t | sed -e s/\\//\-/)
    echo git subtree pull --prefix .vim/bundle/$folder_name $GH_ROOT/$t.git master --squash
  done
}
# }}}

